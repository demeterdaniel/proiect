             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="proiectmobileapp.Pagina">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" BindableLayout.ItemsSource="{Binding Carti}" Padding="15" Spacing="15">

            <Label Text="{Binding Titlu}" FontSize="45"  ></Label>
            <Label Text="{Binding Autor}" FontSize="30"   ></Label>
            <Label Text="{Binding Gen}" FontSize="30"   />
